<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@color/titlebar_bg">

        <ImageView
            android:id="@+id/iv_btn_menu"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/homeprofile2x"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="首页"
            android:textSize="20sp"
            android:layout_centerInParent="true"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_main_show"
        android:layout_width="fill_parent"
        android:layout_height="180dp"
        android:background="@drawable/qhh2x"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:padding="15dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_btn_commodity"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/zutu22x"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:layout_height="fill_parent">
            <ImageView
                android:id="@+id/iv_btn_shopnotice"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:background="@drawable/zutu32x"/>
            <ImageView
                android:id="@+id/iv_btn_marketing"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/zutu42x"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>