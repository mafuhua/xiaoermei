<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
<include layout="@layout/layout_title_bar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:id="@+id/ll_btn_data_day"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_data_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="今日"/>

            <View
                android:id="@+id/line_data_left"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/titlebar_bg"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_btn_data_week"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_data_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="本周"/>

            <View
                android:id="@+id/line_data_center"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/titlebar_bg"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_btn_data_month"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_data_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="本月"/>

            <View
                android:id="@+id/line_data_right"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/titlebar_bg"/>

        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/jucing2x">

        <ImageView
            android:id="@+id/iv_zongkehu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="15dp"
            android:background="@drawable/iconfontdingdanx"/>

        <TextView

            android:id="@+id/tv_data_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_zongkehu"
            android:padding="5dp"
            android:text="本月总订单"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_data_order_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/iv_zongkehu"
            android:padding="5dp"
            android:text="300"
            android:textSize="18sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/jucing2x">

        <ImageView
            android:id="@+id/iv_zongkehu2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="15dp"
            android:background="@drawable/iconfontqian2x"/>

        <TextView

            android:id="@+id/tv_data_order_business"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_zongkehu2"
            android:padding="5dp"
            android:text="本月总营业额"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_data_order_business_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/iv_zongkehu2"
            android:padding="5dp"
            android:text="300"
            android:textSize="18sp"/>
    </RelativeLayout>
</LinearLayout>
