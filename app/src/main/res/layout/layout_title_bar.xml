<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/layout_title_bar"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/titlebar_bg"
        android:padding="8dp">

        <ImageView
            android:id="@+id/iv_btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:background="@drawable/iconfontpjiantou2x"/>

        <TextView
            android:id="@+id/tv_title_dec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="商品列表"
            android:textColor="@android:color/white"
            android:textSize="20sp"/>

        <ImageView
            android:id="@+id/iv_btn_add"
            android:layout_width="40dp"
            android:layout_centerVertical="true"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/iconfonttianjia2x"/>
        <TextView
            android:id="@+id/tv_tixian"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="提现记录"
            android:padding="5dp"
            android:textColor="@android:color/white"
            android:textSize="14sp"/>
    </RelativeLayout>

</LinearLayout>